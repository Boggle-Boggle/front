{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Path config */
    "baseUrl": ".",
    "paths": {
      "assets/*": [
        "src/assets/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "icons/*": [
        "src/components/icons/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "stores/*": [
        "src/stores/*"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "routes/*": [
        "src/routes/*"
      ]
    },
    /* Linting */
    "strict": true
  },
  "include": [
    "src"
  ]
}